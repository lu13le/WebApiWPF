<Window x:Class="Posao.ComicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Posao"
        mc:Ignorable="d"
        Title="ComicWindow" Height="496.092" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="dugmeNazad" Click="dugmeNazad_Click" Content="Prethodni" Margin="15" Padding="15"/>
            <Button Name="dugmeNapred" Click="dugmeNapred_Click" Content="Sledeci" Margin="15" Padding="15" Width="91"/>

        </StackPanel>

        <Border BorderBrush="Green" BorderThickness="1"/>
        <Image  Grid.Row="1" Name="comicImage"/>
        
        

    </Grid>
</Window>
